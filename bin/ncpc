#!/usr/bin/env ruby

require 'optparse'
require 'nicker_pocker/version'
require 'nicker_pocker'

Version = NickerPocker::VERSION

options = {}

# コマンド定義
OptionParser.new do |opts|
  puts Dir.pwd
  # 読み込み
  # options[:input]
  # 出力
  # options[:output]
  # バージョン
  opts.on('-v', '--version') do
    puts opts.ver
    exit(0)
  end
end.parse!

# オプションに基づいて処理を実行
NickerPocker::Command.exec(options)
