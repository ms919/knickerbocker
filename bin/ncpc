#!/usr/bin/env ruby

require 'optparse'
require './lib/nicker_pocker/version'
require './lib/nicker_pocker'

Version = NickerPocker::VERSION

options = {}

# コマンド定義
ARGV.options do |opt|

  # バージョン
  opt.on('-v', '--version') do
    puts opt.ver
  end

  opt.parse!
end

# オプションに基づいて処理を実行
NickerPocker::Command.exec(options)
